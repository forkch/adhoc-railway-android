<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.fork.adhocrailway.android" >
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/adhoc_railway_64"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".AdHocRailwayApplication">
        <activity
            android:name="ch.fork.adhocrailway.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.fork.adhocrailway.android.LocomotiveSelectActivity"
            android:parentActivityName="ch.fork.adhocrailway.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
