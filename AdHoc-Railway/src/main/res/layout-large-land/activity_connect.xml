<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/bring_margin"
    tools:context="ch.fork.adhocrailway.android.activities.ConnectActivity">

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Welcome to AdHoc-Railway"
        android:textAlignment="center"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/adhoc_railway_256" />

    <Button
        android:id="@+id/connectButton"
        style="@style/AppTheme.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:text="Connect" />

    <ProgressBar
        android:id="@+id/connectingProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:indeterminate="true"
        android:visibility="visible" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/serversTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servers:" />

    <TextView
        android:id="@+id/adhocServerHostTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adHocServerHost" />

    <TextView
        android:id="@+id/srcpServerHostTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="srcpServerHost" />


</LinearLayout>
