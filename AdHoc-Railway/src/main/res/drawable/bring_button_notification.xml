<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- pressed -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:padding="10dp">

            <gradient
                android:type="linear"
                android:startColor="@color/bring_gray_light"
                android:endColor="@color/bring_creme"
                android:centerX="0.2"
                android:centerY="0.3"
                android:angle="270" />

            <corners
                android:bottomRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
        </shape>
    </item>
    <item><!-- default -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:padding="10dp">

            <gradient
                android:type="linear"
                android:startColor="@color/bring_creme"
                android:endColor="@color/bring_gray_light"
                android:centerX="0.2"
                android:centerY="0.3"
                android:angle="270" />

            <corners
                android:bottomRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
        </shape>
    </item>
</selector>


