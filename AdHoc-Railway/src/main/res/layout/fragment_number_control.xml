<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numberControlFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.fork.adhocrailway.android.NumberControlFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentNumber"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:gravity="center|top"
                android:text="---"
                android:textSize="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/routeIndicator"
                android:visibility="invisible"
                android:gravity="right"
                android:padding="5dp"
                android:text="R" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:gravity="center"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/lastTurnouts">

                </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/turnoutGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/turnoutButtonLeft"
                    style="@style/AppTheme.Button.Primary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="&lt;"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButtonStraight"
                    style="@style/AppTheme.Button.Primary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="^"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButtonRight"
                    style="@style/AppTheme.Button.Primary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="&gt;"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/turnoutButton7"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButton8"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButton9"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/turnoutButton4"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButton5"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButton6"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/turnoutButton1"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButton2"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButton3"
                    style="@style/AppTheme.Button.Secondary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/turnoutButton0"
                    style="@style/AppTheme.Button.Primary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/turnoutButtonPeriod"
                    style="@style/AppTheme.Button.Primary"
                    android:layout_width="@dimen/numberButtonWidth"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/number_button_margin"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="@dimen/number_button_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/turnoutButtonNonDefault"
                style="@style/AppTheme.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/number_button_margin"
                android:layout_weight="1"
                android:text="+"
                android:textSize="@dimen/number_button_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/turnoutButtonDefault"
                style="@style/AppTheme.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/number_button_margin"
                android:layout_weight="1"
                android:text="Enter"
                android:textSize="@dimen/number_button_text_size"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
